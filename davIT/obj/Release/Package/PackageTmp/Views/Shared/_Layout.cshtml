@using davIT.Models
@inherits System.Web.Mvc.WebViewPage

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@CompanyTexts.Name</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="description" content="Strona firmowa DavIT Futures Dawid Domagała programowanie c#">
        <meta name="keywords" content="DavIT, Futures, Dawid Domagała, programowanie, C#, Windows 8, Windows Phone 8, ASP.NET, MVC 4, ASP.NET MVC 4, WPF, WCF, WinForms, WebServices, Dawid, Domagała">
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <h1>
            DavIT Futures Dawid Domagała programowanie c# wpf wcf asp.net mvc windows phone  @*dla googla*@
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">
                        @Html.ActionLink(@CompanyTexts.Name, @CompanyTexts.IndexAction, @CompanyTexts.Controller)
                    </p>
                </div>
                <div class="float-right">
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink(@CompanyTexts.IndexTitle, @CompanyTexts.IndexAction, @CompanyTexts.Controller)</li>
                            @*<li>@Html.ActionLink(@CompanyTexts.FuturesTitle, @CompanyTexts.FuturesAction, @CompanyTexts.Controller)</li>*@
                            @*<li>@Html.ActionLink(@CompanyTexts.AboutTitle, @CompanyTexts.AboutAction, @CompanyTexts.Controller)</li>*@
                            <li>@Html.ActionLink(@CompanyTexts.ContactTitle, @CompanyTexts.ContactAction, @CompanyTexts.Controller)</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </h1>
            
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>


        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>

        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @CompanyTexts.Footer</p>
                </div>
            </div>
        </footer>

</html>
